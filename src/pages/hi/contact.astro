---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getWhatsAppUrl, whatsappMessages } from '../../utils/whatsapp';
import { useTranslation } from '../../utils/translations';

const t = useTranslation('hi');

const whatsappOptions = [
  { label: 'सामान्य पूछताछ', message: whatsappMessages.generalInquiry },
  { label: '5-दिवसीय पैकेज के बारे में पूछताछ', message: whatsappMessages.packageInquiry('5-Day Package') },
  { label: 'कॉल बैक का अनुरोध', message: whatsappMessages.callbackRequest },
  { label: 'मैं यात्रा बुक करना चाहता हूँ', message: whatsappMessages.bookingInquiry },
];
---

<BaseLayout
  title={t('contact.h1', 'संपर्क करें')}
  description={t('contact.subtitle', 'अपनी आदि कैलाश यात्रा के लिए हमसे संपर्क करें')}
  locale="hi"
  pageName="contact"
>
  <section class="section bg-gradient-to-br from-primary-50 to-white">
    <div class="container-custom">
      <h1 class="section-heading font-hindi">
        {t('contact.h1', 'अपनी आदि कैलाश यात्रा के लिए हमसे संपर्क करें')}
      </h1>
      <p class="text-center text-lg text-gray-700 mb-12 max-w-3xl mx-auto font-hindi">
        {t('contact.subtitle', 'प्रश्न हैं या बुक करने के लिए तैयार हैं? हमसे संपर्क करें!')}
      </p>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="card p-8">
          <h2 class="text-2xl font-bold text-secondary-800 mb-6 font-hindi">
            {t('contact.form_heading', 'हमें एक संदेश भेजें')}
          </h2>
          <form action="#" method="POST" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1 font-hindi">
                {t('contact.name_label', 'आपका नाम')}
              </label>
              <input
                type="text"
                name="name"
                id="name"
                required
                class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1 font-hindi">
                {t('contact.email_label', 'आपका ईमेल')}
              </label>
              <input
                type="email"
                name="email"
                id="email"
                required
                class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1 font-hindi">
                {t('contact.phone_label', 'फोन नंबर (वैकल्पिक)')}
              </label>
              <input
                type="tel"
                name="phone"
                id="phone"
                class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1 font-hindi">
                {t('contact.message_label', 'आपका संदेश')}
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
              ></textarea>
            </div>
            <div>
              <button
                type="submit"
                class="btn-primary w-full py-3 text-lg"
              >
                {t('contact.submit_button', 'संदेश भेजें')}
              </button>
            </div>
          </form>
        </div>

        <!-- WhatsApp Options -->
        <div class="card p-8 bg-green-50 border-green-200">
          <h2 class="text-2xl font-bold text-secondary-800 mb-6 font-hindi">
            {t('contact.whatsapp_heading', 'या सीधे व्हाट्सएप पर चैट करें')}
          </h2>
          <div class="space-y-4">
            {whatsappOptions.map((option) => (
              <a
                href={getWhatsAppUrl({ message: option.message })}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-whatsapp w-full py-3 text-lg font-hindi"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
                {option.label}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .font-hindi {
    font-family: 'Noto Sans Devanagari', sans-serif;
  }
</style>

