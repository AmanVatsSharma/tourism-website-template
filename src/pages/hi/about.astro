---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { loadContent } from '../../utils/dataLoader';
import { useTranslation } from '../../utils/translations';

let content: any = {};
try {
  content = await loadContent();
} catch (error) {
  console.error('[Hindi AboutPage] Error:', error);
}

const t = useTranslation('hi');
const aboutContent = content.about || {};
---

<BaseLayout
  title={t('about.intro.h1', 'आदि कैलाश - दूसरा पंच कैलाश')}
  description={t('about.intro.body', 'आदि कैलाश के बारे में जानें')}
  locale="hi"
  pageName="about"
>
  <section class="section bg-gradient-to-br from-secondary-50 to-white">
    <div class="container-custom">
      <h1 class="section-heading font-hindi">
        {t('about.intro.h1', 'आदि कैलाश - दूसरा पंच कैलाश')}
      </h1>
      <p class="text-center text-lg text-gray-700 mb-12 max-w-3xl mx-auto font-hindi">
        {t('about.intro.body', 'पिथौरागढ़ जिले में 5,945 मीटर की ऊंचाई पर स्थित आदि कैलाश, कैलाश पर्वत के बाद भगवान शिव का दूसरा घर माना जाने वाला पवित्र पर्वत है।')}
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div class="order-2 md:order-1">
          <h2 class="text-3xl font-bold text-secondary-800 mb-6 font-hindi">
            {t('about.mythology.h2', 'पौराणिक कथा और इतिहास')}
          </h2>
          <p class="text-gray-700 text-lg leading-relaxed font-hindi mb-4">
            {t('about.mythology.body', 'जहां रावण ने तपस्या की और पांडवों ने वनवास के दौरान शरण ली')}
          </p>
          <p class="text-gray-700 text-lg leading-relaxed font-hindi">
            यह क्षेत्र प्राचीन हिंदू पौराणिक कथाओं में डूबा हुआ है, माना जाता है कि यह वह स्थान है जहां रावण ने भगवान शिव को प्रसन्न करने के लिए तपस्या की थी और जहां पांडवों ने अपने वनवास के दौरान शरण ली थी। तीर्थयात्री हिमालय की दिव्य सुंदरता को देखने और आध्यात्मिक सांत्वना प्राप्त करने के लिए इस कठिन यात्रा को करते हैं।
          </p>
        </div>
        <div class="order-1 md:order-2">
          <img
            src="https://images.unsplash.com/photo-1617191519106-9ad789b79798?q=80&w=1932"
            alt="आदि कैलाश पर्वत श्रृंखला"
            class="rounded-xl shadow-lg w-full h-auto object-cover"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .font-hindi {
    font-family: 'Noto Sans Devanagari', sans-serif;
  }
</style>

