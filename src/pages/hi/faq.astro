---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { loadJSON } from '../../utils/dataLoader';
import { useTranslation } from '../../utils/translations';

let faqData: any = null;
try {
  faqData = await loadJSON('faq_schema.json');
} catch (error) {
  console.error('[Hindi FAQPage] Error:', error);
}

const t = useTranslation('hi');
---

<BaseLayout
  title={t('faq.intro.h1', 'अक्सर पूछे जाने वाले प्रश्न')}
  description="आदि कैलाश यात्रा के बारे में अक्सर पूछे जाने वाले प्रश्न"
  locale="hi"
  pageName="faq"
  faqSchema={true}
>
  <section class="section bg-gradient-to-br from-accent-50 to-white">
    <div class="container-custom">
      <h1 class="section-heading font-hindi">
        आदि कैलाश यात्रा अक्सर पूछे जाने वाले प्रश्न 2025
      </h1>
      <p class="text-center text-lg text-gray-700 mb-12 max-w-3xl mx-auto font-hindi">
        आदि कैलाश यात्रा के बारे में सामान्य प्रश्नों के उत्तर खोजें
      </p>

      <div class="max-w-4xl mx-auto space-y-4">
        {faqData && faqData.mainEntity.map((item: any) => (
          <details class="group bg-white p-5 rounded-lg shadow-md border border-gray-100 hover:shadow-lg transition-shadow duration-300">
            <summary class="cursor-pointer flex justify-between items-center font-semibold text-lg text-secondary-800 hover:text-primary-600 transition-colors font-hindi">
              <span>{item.name}</span>
              <svg class="w-6 h-6 text-gray-500 group-open:rotate-180 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
            </summary>
            <div class="mt-4 text-gray-700 leading-relaxed border-t border-gray-200 pt-4 font-hindi">
              <p>{item.acceptedAnswer.text}</p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
