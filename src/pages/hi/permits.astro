---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { loadContent } from '../../utils/dataLoader';
import { useTranslation } from '../../utils/translations';

let content: any = {};
try { content = await loadContent(); } catch (e) {}

const t = useTranslation('hi');
---

<BaseLayout title="इनर लाइन परमिट गाइड" description="आदि कैलाश के लिए ILP कैसे प्राप्त करें" locale="hi" pageName="permits">
  <section class="section bg-gradient-to-br from-primary-50 to-white">
    <div class="container-custom">
      <h1 class="section-heading font-hindi">आदि कैलाश इनर लाइन परमिट गाइड - 2025 में ILP कैसे प्राप्त करें</h1>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div class="card p-8">
          <h2 class="text-2xl font-bold text-secondary-800 mb-4 font-hindi">इनर लाइन परमिट (ILP) क्या है?</h2>
          <p class="text-gray-700 leading-relaxed mb-6 font-hindi">
            सभी आगंतुकों के लिए ILP अनिवार्य है क्योंकि आदि कैलाश भारत-तिब्बत सीमा के पास एक प्रतिबंधित क्षेत्र में स्थित है।
          </p>
        </div>

        <div class="card p-8">
          <h2 class="text-2xl font-bold text-secondary-800 mb-4 font-hindi">ILP आवेदन के लिए आवश्यक दस्तावेज</h2>
          <ul class="list-disc list-inside space-y-2 text-gray-700 text-lg font-hindi">
            <li>वैध सरकारी आईडी (आधार/पासपोर्ट/वोटर आईडी)</li>
            <li>2-3 पासपोर्ट आकार के फोटो (हाल के रंगीन)</li>
            <li>एमबीबीएस डॉक्टर से मेडिकल फिटनेस सर्टिफिकेट</li>
            <li>पुलिस सत्यापन प्रमाण पत्र (15 दिन से अधिक पुराना नहीं)</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
