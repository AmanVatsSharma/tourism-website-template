---
/**
 * Contact Page - Get in Touch with Shiv Yatra Tourism
 * 
 * Features:
 * - Contact form (frontend only, integrates with WhatsApp)
 * - Quick WhatsApp message buttons
 * - Phone, email, and address information
 * - Office hours and location map
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import { getQuickMessageOptions, PHONE_NUMBER_DISPLAY } from '../utils/whatsapp';

console.log('[ContactPage] Loading contact page...');

const pageTitle = 'Contact Us';
const pageDescription = 'Get in touch with Shiv Yatra Tourism for Adi Kailash pilgrimage bookings, inquiries, and assistance. Available via WhatsApp, phone, and email.';

// Quick message options
const quickMessages = getQuickMessageOptions();
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  locale="en"
  pageName="contact"
>
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-secondary-900 to-primary-900 text-white py-20">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Get In Touch
      </h1>
      <p class="text-xl opacity-90 max-w-2xl mx-auto">
        We're here to help plan your sacred journey to Adi Kailash
      </p>
    </div>
  </section>

  <!-- Contact Information & Form -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Contact Details -->
        <div class="lg:col-span-1 space-y-6">
          <div>
            <h2 class="text-2xl font-bold text-secondary-800 mb-6">Contact Information</h2>
            
            <!-- Phone -->
            <div class="flex items-start gap-4 mb-6">
              <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-secondary-800 mb-1">Phone</h3>
                <a href="tel:+917302937532" class="text-primary-600 hover:text-primary-700 font-medium">
                  {PHONE_NUMBER_DISPLAY}
                </a>
                <p class="text-sm text-gray-600 mt-1">Mon-Sat: 9 AM - 8 PM IST</p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start gap-4 mb-6">
              <div class="w-12 h-12 rounded-full bg-accent-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-accent-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-secondary-800 mb-1">Email</h3>
                <a href="mailto:info@shivyatratourism.com" class="text-primary-600 hover:text-primary-700">
                  info@shivyatratourism.com
                </a>
                <p class="text-sm text-gray-600 mt-1">We reply within 24 hours</p>
              </div>
            </div>

            <!-- Address -->
            <div class="flex items-start gap-4 mb-6">
              <div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-secondary-800 mb-1">Office</h3>
                <p class="text-gray-700">
                  Dharchula, Pithoragarh<br>
                  Uttarakhand, India
                </p>
              </div>
            </div>

            <!-- WhatsApp -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-[#25D366]/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-[#25D366]" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-secondary-800 mb-1">WhatsApp</h3>
                <a 
                  href="https://wa.me/917302937532"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-[#25D366] hover:underline font-medium"
                >
                  Chat with us instantly
                </a>
                <p class="text-sm text-gray-600 mt-1">Fastest response time</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="card">
            <h2 class="text-2xl font-bold text-secondary-800 mb-6">Send Us a Message</h2>
            
            <form id="contactForm" class="space-y-4">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                    Your Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="input"
                    placeholder="Enter your full name"
                  />
                </div>
                
                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                    Phone Number *
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    class="input"
                    placeholder="+91 9876543210"
                  />
                </div>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email Address
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="input"
                  placeholder="your.email@example.com"
                />
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                  Subject
                </label>
                <select id="subject" name="subject" class="input">
                  <option value="general">General Inquiry</option>
                  <option value="booking">Package Booking</option>
                  <option value="permit">Permit Assistance</option>
                  <option value="custom">Custom Itinerary</option>
                  <option value="group">Group Booking</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  Your Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  class="textarea"
                  placeholder="Tell us about your travel plans, questions, or requirements..."
                ></textarea>
              </div>

              <div class="flex flex-col sm:flex-row gap-3">
                <button type="submit" class="btn-whatsapp flex-1">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                  </svg>
                  Send via WhatsApp
                </button>
                <button type="button" class="btn-outline flex-1" onclick="this.closest('form').reset()">
                  Clear Form
                </button>
              </div>

              <p class="text-sm text-gray-600">
                * Required fields. Your information is safe and will only be used to respond to your inquiry.
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Message Options -->
  <section class="section bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-secondary-800 mb-4">
          Quick Contact Options
        </h2>
        <p class="text-lg text-gray-600">
          Choose a pre-filled message for instant WhatsApp chat
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {quickMessages.map((option) => (
          <a
            href={option.url}
            target="_blank"
            rel="noopener noreferrer"
            class="card group hover:border-primary-300 border-2 border-transparent transition-all"
          >
            <div class="flex items-start gap-4">
              <div class="text-4xl">{option.icon}</div>
              <div class="flex-grow">
                <h3 class="font-semibold text-secondary-800 mb-2 group-hover:text-primary-600 transition-colors">
                  {option.label}
                </h3>
                <p class="text-sm text-gray-600">Click to start WhatsApp chat</p>
              </div>
              <svg class="w-5 h-5 text-gray-400 group-hover:text-primary-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Map Section (Placeholder) -->
  <section class="section bg-white">
    <div class="container-custom">
      <h2 class="text-3xl font-bold text-secondary-800 mb-8 text-center">
        Our Location
      </h2>
      
      <div class="rounded-2xl overflow-hidden shadow-xl">
        <div class="aspect-video bg-gray-200 flex items-center justify-center">
          <div class="text-center p-8">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <p class="text-gray-600 text-lg font-medium">
              Dharchula, Pithoragarh, Uttarakhand
            </p>
            <p class="text-sm text-gray-500 mt-2">
              Located near the Indo-Nepal border, gateway to Adi Kailash
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Contact form handling with WhatsApp integration
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactForm');
    
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Get form data
        const formData = new FormData(form as HTMLFormElement);
        const name = formData.get('name');
        const phone = formData.get('phone');
        const email = formData.get('email');
        const subject = formData.get('subject');
        const message = formData.get('message');
        
        // Construct WhatsApp message
        let whatsappMessage = `Hi Shiv Yatra Tourism,\n\n`;
        whatsappMessage += `Name: ${name}\n`;
        whatsappMessage += `Phone: ${phone}\n`;
        if (email) whatsappMessage += `Email: ${email}\n`;
        whatsappMessage += `Subject: ${subject}\n\n`;
        whatsappMessage += `Message:\n${message}\n\n`;
        whatsappMessage += `Thank you!`;
        
        // Open WhatsApp with pre-filled message
        const whatsappURL = `https://wa.me/917302937532?text=${encodeURIComponent(whatsappMessage)}`;
        
        console.log('[ContactForm] Opening WhatsApp with message');
        window.open(whatsappURL, '_blank');
        
        // Reset form after short delay
        setTimeout(() => {
          (form as HTMLFormElement).reset();
        }, 1000);
      });
    }
  });
</script>

