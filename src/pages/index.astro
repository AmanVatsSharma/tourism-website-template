import BaseLayout from '../layouts/BaseLayout.astro';
import { loadContent, loadJSON } from '../utils/dataLoader';
import { detectLanguage } from '../utils/languageHelper';
import { useTranslation } from '../utils/translations';
import { getWhatsAppUrl } from '../utils/whatsapp';

// STEP 1: Detect language from URL
const langContext = detectLanguage(Astro);
const locale = langContext.locale;

// STEP 2: Get translation function for detected language
const t = useTranslation(locale);

// Console logging for debugging
console.log('[HomePage] ========================================');
console.log('[HomePage] Loading home page...');
console.log('[HomePage] Detected locale:', locale);
console.log('[HomePage] Path:', langContext.fullPath);
console.log('[HomePage] ========================================');

// STEP 3: Load page content from data files
let content: any = {};
let itinerary: any = null;

try {
  content = await loadContent();
  itinerary = await loadJSON('itinerary_5day.json');
  console.log('[HomePage] ‚úì Data loaded successfully');
  console.log('[HomePage] Content keys:', Object.keys(content));
} catch (error) {
  console.error('[HomePage] ‚úó Error loading data:', error);
  console.error('[HomePage] Error details:', error);
}

// STEP 4: Extract home page content (with fallbacks)
const homeContent = content.home || {};
const heroContent = homeContent.hero || {};
const whyChooseContent = homeContent['why-choose'] || {};

// STEP 5: Get translated page metadata
const pageTitle = t('hero.title', 'Adi Kailash Yatra 2025 - Sacred Pilgrimage');
const pageDescription = t('hero.description', 'Experience the divine replica of Mount Kailash without crossing borders. Complete packages from ‚Çπ15,000.');

// STEP 6: WhatsApp configuration with translated message
const whatsappMessage = t('whatsapp.message');
const whatsappURL = getWhatsAppUrl({ message: whatsappMessage });

console.log('[HomePage] Page title:', pageTitle);
console.log('[HomePage] WhatsApp URL generated');
console.log('[HomePage] ‚úì Homepage ready to render');
