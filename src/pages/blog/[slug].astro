---
/**
 * Dynamic Blog Post Page - [slug].astro
 * 
 * Features:
 * - Beautiful article layout with spiritual design
 * - Schema markup for SEO
 * - Social sharing buttons
 * - Related posts section
 * - Reading time estimation
 * - Table of contents (for long posts)
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import { getWhatsAppUrl } from '../../utils/whatsapp';

// Get all blog posts
export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

console.log('[BlogPost] Rendering:', post.slug);

// Get related posts (same tags)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => 
    p.slug !== post.slug && 
    p.data.tags?.some(tag => post.data.tags?.includes(tag))
  )
  .slice(0, 3);

console.log('[BlogPost] ✓ Found', relatedPosts.length, 'related posts');

// Estimate reading time (assuming 200 words per minute)
const contentString = JSON.stringify(post.body);
const wordCount = contentString.split(/\s+/).length;
const readingTime = Math.ceil(wordCount / 200);

const whatsappURL = getWhatsAppUrl({ 
  message: `Hi, I read your article "${post.data.title}" and I'm interested in Adi Kailash Yatra. Please share more details.`
});
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  locale="en"
  pageName="blog"
>
  <!-- Hero Section with Featured Image -->
  <article class="blog-post-content">
    <header class="relative bg-gradient-to-br from-secondary-900 via-primary-800 to-accent-700 text-white py-16 md:py-24 overflow-hidden">
      <!-- Decorative Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 text-9xl">🕉️</div>
        <div class="absolute top-1/4 right-0 text-9xl">🌸</div>
        <div class="absolute bottom-0 left-1/4 text-9xl">🏔️</div>
        <div class="absolute bottom-1/4 right-1/4 text-9xl">📿</div>
      </div>
      
      <div class="container-custom relative z-10">
        <!-- Breadcrumb -->
        <nav class="text-sm mb-6 flex items-center gap-2 text-white/80">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <span>→</span>
          <a href="/blog" class="hover:text-white transition-colors">Blog</a>
          <span>→</span>
          <span class="text-white font-medium">{post.data.title.substring(0, 30)}...</span>
        </nav>

        <div class="max-w-4xl">
          <!-- Category Badge -->
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="mb-4">
              <span class="inline-block px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-semibold">
                📚 {post.data.tags[0]}
              </span>
            </div>
          )}

          <!-- Title -->
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 leading-tight">
            {post.data.title}
          </h1>

          <!-- Meta Info -->
          <div class="flex flex-wrap items-center gap-6 text-white/90 text-sm md:text-base">
            <div class="flex items-center gap-2">
              <span class="text-xl">✍️</span>
              <span>{post.data.author}</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-xl">📅</span>
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </time>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-xl">⏱️</span>
              <span>{readingTime} min read</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="bg-gradient-to-br from-white via-primary-50/20 to-accent-50/20 py-12 md:py-16">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <!-- Featured Image -->
          {post.data.image && (
            <div class="mb-12 rounded-2xl overflow-hidden shadow-2xl border-4 border-white">
              <img
                src={post.data.image}
                alt={post.data.title}
                class="w-full h-auto"
                loading="eager"
              />
            </div>
          )}

          <!-- Article Content -->
          <div class="prose prose-lg md:prose-xl prose-primary max-w-none">
            <!-- Decorative Drop Cap Style -->
            <div class="bg-white rounded-2xl shadow-lg p-8 md:p-12 mb-8 border border-gray-100">
              <Content />
            </div>
          </div>

          <!-- Tags -->
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="mt-8 p-6 bg-white rounded-xl shadow-md">
              <h3 class="text-lg font-bold text-secondary-800 mb-3">📌 Topics Covered:</h3>
              <div class="flex flex-wrap gap-3">
                {post.data.tags.map((tag: string) => (
                  <a
                    href={`/blog?tag=${encodeURIComponent(tag)}`}
                    class="px-4 py-2 bg-gradient-to-r from-primary-100 to-accent-100 hover:from-primary-200 hover:to-accent-200 text-primary-800 rounded-full font-medium transition-colors text-sm md:text-base"
                  >
                    {tag}
                  </a>
                ))}
              </div>
            </div>
          )}

          <!-- Share Section -->
          <div class="mt-8 p-6 bg-gradient-to-r from-primary-500 to-accent-500 rounded-xl shadow-lg text-white">
            <h3 class="text-lg font-bold mb-4 flex items-center gap-2">
              📢 Share This Article
            </h3>
            <div class="flex flex-wrap gap-3">
              <button 
                onclick={`window.open('https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}', '_blank', 'width=600,height=400')`}
                class="px-5 py-3 bg-white/20 hover:bg-white/30 backdrop-blur-sm rounded-full font-medium transition-colors flex items-center gap-2"
              >
                📘 Facebook
              </button>
              <button
                onclick={`window.open('https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}', '_blank', 'width=600,height=400')`}
                class="px-5 py-3 bg-white/20 hover:bg-white/30 backdrop-blur-sm rounded-full font-medium transition-colors flex items-center gap-2"
              >
                🐦 Twitter
              </button>
              <a
                href={whatsappURL}
                target="_blank"
                rel="noopener noreferrer"
                class="px-5 py-3 bg-white/20 hover:bg-white/30 backdrop-blur-sm rounded-full font-medium transition-colors flex items-center gap-2"
              >
                💬 WhatsApp
              </a>
            </div>
          </div>

          <!-- CTA Box -->
          <div class="mt-8 p-8 bg-gradient-to-br from-secondary-800 to-primary-700 rounded-2xl shadow-2xl text-white text-center">
            <div class="text-5xl mb-4">🕉️</div>
            <h3 class="text-2xl md:text-3xl font-bold mb-4">
              Ready to Experience Adi Kailash?
            </h3>
            <p class="text-lg opacity-90 mb-6 max-w-2xl mx-auto">
              Let us help you plan your sacred pilgrimage. Contact our expert team today!
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/packages" class="btn-primary bg-white text-primary-700 hover:bg-gray-100">
                View Packages
              </a>
              <a href={whatsappURL} target="_blank" rel="noopener noreferrer" class="btn-whatsapp">
                Chat on WhatsApp
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="section bg-gray-50">
        <div class="container-custom">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-secondary-800">
            📚 Related Articles
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {relatedPosts.map((relatedPost) => (
              <a
                href={`/blog/${relatedPost.slug}`}
                class="group block bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
              >
                <div class="h-48 bg-gradient-to-br from-primary-400 to-accent-500 relative overflow-hidden">
                  {relatedPost.data.image ? (
                    <img
                      src={relatedPost.data.image}
                      alt={relatedPost.data.title}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                      loading="lazy"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center text-white text-6xl">
                      📖
                    </div>
                  )}
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                </div>
                <div class="p-6">
                  <h3 class="text-lg font-bold mb-2 text-secondary-800 group-hover:text-primary-600 transition-colors line-clamp-2">
                    {relatedPost.data.title}
                  </h3>
                  <p class="text-gray-600 text-sm line-clamp-3">
                    {relatedPost.data.description}
                  </p>
                  <div class="mt-4 text-primary-600 font-semibold text-sm flex items-center gap-2">
                    Read More
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}
  </article>
</BaseLayout>

<style>
  /* Prose Styling for Article Content */
  .prose {
    @apply text-gray-800;
  }

  .prose h2 {
    @apply text-2xl md:text-3xl font-bold text-secondary-800 mt-8 mb-4;
    @apply border-l-4 border-primary-500 pl-4;
  }

  .prose h3 {
    @apply text-xl md:text-2xl font-bold text-secondary-700 mt-6 mb-3;
  }

  .prose p {
    @apply text-base md:text-lg leading-relaxed mb-4 text-gray-700;
  }

  .prose ul, .prose ol {
    @apply my-6 space-y-2;
  }

  .prose li {
    @apply text-base md:text-lg text-gray-700 leading-relaxed;
  }

  .prose strong {
    @apply text-secondary-800 font-semibold;
  }

  .prose a {
    @apply text-primary-600 hover:text-primary-700 underline font-medium;
  }

  .prose blockquote {
    @apply border-l-4 border-accent-500 pl-6 italic text-gray-700 my-6;
    @apply bg-accent-50 py-4 rounded-r-lg;
  }

  .prose code {
    @apply bg-gray-100 px-2 py-1 rounded text-sm font-mono text-secondary-800;
  }

  .prose pre {
    @apply bg-secondary-900 text-white p-4 rounded-lg overflow-x-auto my-6;
  }

  .prose img {
    @apply rounded-lg shadow-lg my-8;
  }

  /* Drop Cap Effect (First Letter) */
  .prose > div > p:first-of-type::first-letter {
    @apply text-5xl md:text-6xl font-bold text-primary-600 float-left mr-2 leading-none;
  }
</style>

<script>
  // Smooth scroll for anchor links
  document.addEventListener('DOMContentLoaded', () => {
    console.log('[BlogPost] Initializing smooth scroll for anchors...');
    
    const links = document.querySelectorAll('a[href^="#"]');
    links.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('href');
        if (targetId && targetId !== '#') {
          const target = document.querySelector(targetId);
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }
      });
    });
    
    console.log('[BlogPost] ✓ Blog post rendered successfully');
  });
</script>

