---
/**
 * About Page - About Adi Kailash and Shiv Yatra Tourism
 * 
 * Features:
 * - Adi Kailash introduction and significance
 * - Mythology and history
 * - Religious importance
 * - Company information
 * - Why choose us section
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import { loadContent } from '../utils/dataLoader';

console.log('[AboutPage] Loading about page data...');

let content: any = {};

try {
  content = await loadContent();
  console.log('[AboutPage] ‚úì Data loaded successfully');
} catch (error) {
  console.error('[AboutPage] ‚úó Error loading data:', error);
}

const aboutContent = content.about || {};
const introContent = aboutContent.intro || {};
const mythologyContent = aboutContent.mythology || {};

const pageTitle = typeof introContent.h1 === 'string' ? introContent.h1 : 'About Adi Kailash - The Sacred Mountain';
const pageDescription = 'Discover the significance of Adi Kailash, the second of Panch Kailash. Learn about its mythology, history, and why it\'s revered as Lord Shiva\'s earthly abode.';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  locale="en"
  pageName="about"
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-secondary-900 via-primary-800 to-accent-700 text-white py-16 md:py-24">
    <div class="absolute inset-0 bg-black/30"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold mb-4 md:mb-6">
          {pageTitle}
        </h1>
        <p class="text-lg md:text-xl opacity-90">
          The Sacred Replica of Mount Kailash in the Indian Himalayas
        </p>
      </div>
    </div>
  </section>

  <!-- Introduction Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        <div>
          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-secondary-800 mb-4 md:mb-6">
            What is Adi Kailash?
          </h2>
          <div class="prose prose-lg max-w-none text-gray-700 space-y-4">
            <p>
              {typeof introContent.body === 'string' ? introContent.body : 
              'Adi Kailash, standing majestically at 5,945 meters (19,505 feet) in Pithoragarh district of Uttarakhand, is the sacred mountain believed to be Lord Shiva\'s second home after Mount Kailash in Tibet.'}
            </p>
            <p>
              Also known as <strong>Chhota Kailash</strong> or <strong>Baba Kailash</strong>, this divine peak is the second most important among the Panch Kailash (Five Kailashes) and holds immense religious significance for Hindu pilgrims.
            </p>
            <p>
              The mountain's striking resemblance to Mount Kailash in Tibet makes it a popular alternative for devotees, especially after the Chinese occupation of Tibet made the original Kailash difficult to access.
            </p>
          </div>
          
          <div class="grid grid-cols-2 gap-4 mt-6 md:mt-8">
            <div class="bg-primary-50 p-4 rounded-xl">
              <div class="text-2xl md:text-3xl font-bold text-primary-600 mb-1">5,945m</div>
              <div class="text-sm text-gray-600">Altitude</div>
            </div>
            <div class="bg-accent-50 p-4 rounded-xl">
              <div class="text-2xl md:text-3xl font-bold text-accent-600 mb-1">#2</div>
              <div class="text-sm text-gray-600">Panch Kailash</div>
            </div>
          </div>
        </div>

        <div class="order-first lg:order-last">
          <div class="aspect-square rounded-2xl bg-gradient-to-br from-primary-200 to-accent-200 flex items-center justify-center shadow-xl">
            <div class="text-center p-6 md:p-8">
              <div class="text-6xl md:text-8xl mb-4">üèîÔ∏è</div>
              <p class="text-lg md:text-xl font-semibold text-secondary-800">
                Adi Kailash Peak
              </p>
              <p class="text-sm md:text-base text-gray-600 mt-2">
                Lord Shiva's Sacred Abode
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mythology & History -->
  <section class="section bg-gray-50">
    <div class="container-custom">
      <h2 class="section-heading">Mythology & History</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        <!-- Mythological Significance -->
        <div class="card">
