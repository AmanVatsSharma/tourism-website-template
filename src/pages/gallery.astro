  { src: '/images/modi-parvati-kund-pooja_202310277471.jpg', alt: 'Parvati Kund Pooja Ceremony', category: 'temples' },
  { src: '/images/66a733e1d19a0455f7a69c0b-adi-kailash-temple.webp', alt: 'Adi Kailash Temple', category: 'temples' },
  { src: '/images/27_10_2023-adi_kailash_23566403.jpeg', alt: 'Adi Kailash Journey', category: 'journey' },
  { src: '/images/Adi-Kailash--819x1024.jpeg', alt: 'Adi Kailash Portrait', category: 'peaks' },
  { src: '/images/adi-kailash-6306783.webp', alt: 'Adi Kailash Summit', category: 'peaks' },
  { src: '/images/c8b7e532-80b4-40f7-845f-87a4fb581461_Adi-Kailash-3 (1).webp', alt: 'Adi Kailash Landscape', category: 'peaks' },
  { src: '/images/Adi-Kailash.jpg', alt: 'Adi Kailash Mountain', category: 'peaks' },
  { src: '/images/adi_kailash_tour16.jpg', alt: 'Adi Kailash Tour', category: 'journey' },
];

// Categories
const categories = [
  { id: 'all', name: t('gallery.all', 'All Photos'), icon: 'üñºÔ∏è' },
  { id: 'peaks', name: t('gallery.peaks', 'Mountains & Peaks'), icon: 'üèîÔ∏è' },
  { id: 'temples', name: t('gallery.temples', 'Temples'), icon: 'üõï' },
