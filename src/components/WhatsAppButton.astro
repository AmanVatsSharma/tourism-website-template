/**
 * WhatsApp Floating Button Component
 * 
 * Features:
 * - Fixed position button (bottom-right corner)
 * - Pulse animation for attention
 * - Hover effects with spiritual glow
 * - Pre-filled message based on current page
 * - Mobile-optimized size
 * - Accessible with ARIA labels
 */

import { getWhatsAppUrl, whatsappMessages } from '../utils/whatsapp';
import { useTranslation } from '../utils/translations';

interface Props {
  currentLocale: 'en' | 'hi';
}

const { currentLocale } = Astro.props;
const t = useTranslation(currentLocale);

// Get the WhatsApp URL with default message
const whatsappURL = getWhatsAppUrl({ message: t('whatsapp.message') });

console.log('[WhatsAppButton] Rendering WhatsApp button');
---

